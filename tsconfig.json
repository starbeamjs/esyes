{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "incremental": true,
    "module": "es2022",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noImplicitAny": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node", "./src/modules.d.ts"],
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*"]
}
